{% extends 'base.html.twig' %}

{% block title %}Post - {{post.title}}{% endblock %}

{% block body %}

<div>
    <h3>{{post.title}}</h3>
    <div style="color: grey;">
        {% if date(post.createdAt) < date('-1year') %}
            Older than 1 year
        {% else %}
            {{post.createdAt|date("Y/m/d")}}
        {% endif %}
    </div>
    <p>{{post.text}}</p>
</div>
{% endblock %}
